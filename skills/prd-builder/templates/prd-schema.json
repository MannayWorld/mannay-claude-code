{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["projectName", "branchName", "description", "created", "userStories", "completionPromise"],
  "properties": {
    "projectName": {
      "type": "string",
      "minLength": 1
    },
    "branchName": {
      "type": "string",
      "pattern": "^ralph/[a-z0-9-]+$"
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "created": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "userStories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "acceptanceCriteria", "priority", "passes"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^US-\\d{3}$"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "acceptanceCriteria": {
            "type": "array",
            "minItems": 3,
            "maxItems": 10,
            "items": {
              "type": "string"
            }
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4
          },
          "complexity": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "passes": {
            "type": "boolean"
          },
          "notes": {
            "type": "string"
          },
          "blocked": {
            "type": "boolean"
          },
          "blockedReason": {
            "type": "string"
          }
        }
      }
    },
    "completionPromise": {
      "type": "string",
      "const": "<promise>COMPLETE</promise>"
    },
    "maxIterations": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100
    }
  }
}
